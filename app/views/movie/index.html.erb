<h1>Index</h1>
<a href="<%= new_movie_path %>">New movie</a>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">View state build by the MovieProjector</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% MovieRecord.all.each do |movie| %>
      <li><%= h movie.name %> is described as <%= movie.description %>
          <%= link_to 'Edit', edit_movie_path(id: movie.aggregate_id) %>
          <%= link_to 'Delete', movie_path(id: movie.aggregate_id), method: :delete, data: { confirm: 'Are you sure?' }  %>
    <% end %>
    </ul>
  </div>
</div>

