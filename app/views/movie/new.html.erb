<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">New movie</h3>
    </div>
    <div class="panel-body">
      <ul class="errors">
        <% @command.validation_errors.each do |error| %>
          <li><%= error.first %> <%= error.last.join(",") %></li>
        <% end %>
      </ul>

      <%= form_tag("/movie", method: "post") do %>
        <fieldset>
          <div class="form-group">
            <label for="amount">Name</label>
            <input class="form-control" type="text" name="create_movie[name]" id="name" value="<%= @command.name %>">
          </div>
          <div class="form-group">
            <label for="recipient_name">Description</label>
            <input class="form-control" type="text" name="create_movie[description]" id="description" value="<%= @command.description %>">
          </div>
          <input type="hidden" name="create_movie[aggregate_id]" value="<%= @command.aggregate_id %>">

          <input class="btn btn-lg btn-primary" type="submit" value="Add Movie!">
        </fieldset>
      <% end %>
    </div>
  </div>
