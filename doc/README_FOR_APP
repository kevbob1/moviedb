Use this README file to introduce your application and point to useful places in the API for learning more.
Run "rake doc:app" to generate API documentation for your models, controllers, helpers, and libraries.


cqlsh create keyspaces


drop keyspace moviedb_test;
drop keyspace moviedb_development;

CREATE KEYSPACE moviedb_test WITH replication = {'class':'SimpleStrategy', 'replication_factor':1};
CREATE KEYSPACE moviedb_development WITH replication = {'class':'SimpleStrategy', 'replication_factor':1};


cqlsh create tables

use moviedb_test;
create TABLE movies (id uuid, title varchar, description varchar, watched boolean, version int, created_at timestamp, updated_at timestamp, primary key (id));


create TABLE movies_title_idx (idx varchar, title varchar, id uuid, primary key (idx, title, id));

